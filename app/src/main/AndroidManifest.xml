    package="com.lc.dementiahack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.ListActivity" />
        <activity android:name=".ui.FacebookSignUp" />
        <activity android:name=".ui.signup.PageOne" />
        <activity android:name=".ui.signup.FirstPageActivity" />
        <activity android:name=".ui.signup.SecondPageActivity" />
        <activity android:name=".ui.signup.ThirdPageActivity" />
        <activity android:name=".ui.signup.FourthPageActivity" />
        <activity android:name=".ui.signup.FifthPageActivity" />
        <activity android:name=".ui.signup.SevenPageActivity" />
        <activity android:name=".ui.signup.EigthPageActivity"></activity>
    </application>

</manifest>